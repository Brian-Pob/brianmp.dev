---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = await getCollection("blog", ({ data }) => {
  return (
    data.status === "published" ||
    (import.meta.env.DEV && data.status === "preview")
  );
});
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---
<BaseLayout>
  <head> <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} /> </head>
  <body>
    <Header />
    <main id="main-content">
      <section>
        <ul>
          {
            sortedPosts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                {
                  post.data.heroImage ?
                    <Image src={post.data.heroImage} alt="" />
                    : <Image width={720} height={360} src="/og-banner-no-tag.png" alt="" />

                }
                  <h4 class='title'>{post.data.title}</h4>
                  <p class='date'>
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</BaseLayout>
<style>
  main {
    width: 960px;
  }
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: var(--size-7);
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
  ul li:first-child {
    width: 100%;
    margin-bottom: var(--size-3);
    text-align: center;
    & img {
      max-width: 100%;
      object-fit: cover;
      object-position: top;
    }
    & .title {
      font-size: 2.369rem;
    }
  }

  ul li {
    width: calc(50% - var(--size-3));
    & * {
      text-decoration: none;
      transition: 0.2s ease;
    }
    & img {
      aspect-ratio: 2 / 1;
      object-fit: cover;
      object-position: top;
      margin-bottom: var(--size-2);
      border-radius: 12px;
      box-shadow: var(--box-shadow-sm);
    }

    & a {
      display: block;
      border: none;
    }
  }
  .title {
    margin: 0;
    color: var(--text-primary);
    line-height: 1;
  }
  .date {
    margin: 0;
    color: var(--text-secondary);
  }

  ul li a:hover {
    & h4,
    .date {
      color: rgb(var(--accent));
    }
    & img {
      box-shadow: var(--box-shadow-md);
    }
  }
  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }
    ul li {
      width: 100%;
      text-align: center;
    }
    ul li:first-child {
      margin-bottom: 0;
    }
    ul li:first-child .title {
      font-size: 1.563em;
    }
  }
</style>
