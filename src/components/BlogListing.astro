---
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';
/**
 * props:
 * - posts: array of collection entries
 * - title?: optional title string to show above the list
 */
interface Props {
  posts: CollectionEntry<'blog'>[];
  title?: string;
}

const { posts = [], title = undefined } = Astro.props as Props;
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<section>
  {title ? <h2>{title}</h2> : null}
  <ul>
    {
      sortedPosts.map((post) => (
        <li>
          <a href={`/blog/${post.slug}/`}>
            {post.data.heroImage ? (
              typeof post.data.heroImage === 'string' ? (
                <img src={post.data.heroImage} alt="" />
              ) : (
                <Image src={post.data.heroImage} inferSize alt="" />
              )
            ) : (
              <Image
                width={720}
                height={360}
                src="/blog-placeholder-3.jpg"
                alt=""
              />
            )}
            <h4 class="title">{post.data.title}</h4>
            <p class="date">
              <FormattedDate date={post.data.pubDate} />
            </p>
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    margin-top: var(--size-6);
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    gap: var(--size-7);
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
  ul li:first-child {
    width: 100%;
    margin-bottom: var(--size-3);
    text-align: center;
  }

  ul li {
    width: calc(50% - var(--size-3));
  }
  ul li * {
    text-decoration: none;
    transition: 0.2s ease;
  }
  ul li img {
    aspect-ratio: 2 / 1;
    object-fit: cover;
    object-position: top;
    margin-bottom: var(--size-2);
    border-radius: 12px;
    box-shadow: var(--box-shadow-sm);
  }

  .title {
    margin: 0;
    color: var(--text-primary);
    line-height: 1;
  }
  .date {
    margin: 0;
    color: var(--text-secondary);
  }

  ul li a:hover h4,
  ul li a:hover .date {
    color: rgb(var(--accent));
  }
  ul li a:hover img {
    box-shadow: var(--box-shadow-md);
  }

  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }
    ul li {
      width: 100%;
      text-align: center;
    }
    ul li:first-child {
      margin-bottom: 0;
    }
    ul li:first-child .title {
      font-size: 1.563em;
    }
  }
</style>
